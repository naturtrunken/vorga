<h1>Listing vocabularies</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Translation</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vocabularies.each do |vocabulary| %>
  <tr>
    <td><%= vocabulary.id %></td>
    <td><%= vocabulary.name %></td>
    <td><%= vocabulary.translation %></td>
    <td><% if vocabulary.category_id %>
    	<%= Category.find(vocabulary.category_id).name %>
    <% else %>
    (None)
    <% end %></td>
    <td><%= link_to 'Show', language_flashcard_vocabulary_path(@language, @flashcard, vocabulary) %></td>
    <td><%= link_to 'Edit', edit_language_flashcard_vocabulary_path(@language, @flashcard, vocabulary) %></td>
    <td><%= link_to 'Destroy', language_flashcard_vocabulary_path(@language, @flashcard, vocabulary), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Vocabulary', new_language_flashcard_vocabulary_path(@language, @flashcard) %><br/>
<%= link_to 'Back to the flashcard sets', language_flashcards_path(@language) %>
