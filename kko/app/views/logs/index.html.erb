<h1>Listing logs</h1>

<table>
  <tr>
    <th>Start</th>
    <th>End</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @logs.each do |log| %>
  <tr>
    <td><%= log.start %></td>
    <td><%= log.end %></td>
    <td><%= link_to 'Show', language_flashcard_log_path(@language, @flashcard, log) %></td>
    <td><%= link_to 'Edit', edit_language_flashcard_log_path(@language, @flashcard, log) %></td>
    <td><%= link_to 'Destroy', language_flashcard_log_path(@language, @flashcard, log), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

